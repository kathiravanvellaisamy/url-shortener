<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener Application</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Montserrat", sans-serif;
      }
    </style>
  </head>
  <body>
    <section class="py-12 bg-slate-400 w-full" role="heading">
      <h2 class="text-white text-3xl md:text-5xl text-center font-bold">
        URL Shortener Application
      </h2>
    </section>
    <section class="mt-6 mb-4 max-w-4xl mx-auto px-2" role="form">
      <form action="/shortUrls" method="post">
        <div>
          <label for="url" class="py-2 text-lg font-semibold text-slate-600"
            >Enter the URL</label
          >
          <input
            type="url"
            name="url"
            id="url"
            class="py-2 px-2 w-full rounded-md outline-none border border-slate-200 bg-slate-400 focus:bg-white focus:shadow-md mt-3"
          />
        </div>

        <button
          class="py-2 px-5 border-slate-700 border-2 text-slate-700 rounded-md my-5"
        >
          Shrink
        </button>
      </form>
    </section>
    <section class="max-w-4xl mx-auto" role="table">
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table
          class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
        >
          <thead
            class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
          >
            <tr>
              <th scope="col" class="px-6 py-3">S No</th>
              <th scope="col" class="px-6 py-3">Full Url</th>
              <th scope="col" class="px-6 py-3">Short Url</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(shortUrl => { %>
            <tr
              class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"
            >
              <th
                scope="row"
                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
              >
                <%= shortUrl._id %>
              </th>
              <td class="px-6 py-4"><%= shortUrl.full %></td>
              <td class="px-6 py-4">
                <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </body>
</html>
